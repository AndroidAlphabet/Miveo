<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="Theme.Copalive" parent="@style/Theme.AppCompat">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_copalive</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Copalive</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Copalive</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Copalive</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Copalive</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Copalive</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_copalive</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_copalive</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Copalive</item>
        <item name="android:windowBackground">@color/background_copalive</item>

        <item name="android:activatedBackgroundIndicator">@drawable/listitem_background</item>
    </style>

    <style name="ActionBar.Solid.Copalive" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_copalive</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_copalive</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_copalive</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Copalive</item>
    </style>

    <style name="ActionBar.Transparent.Copalive" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@drawable/ab_transparent_copalive</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Copalive</item>
    </style>

    <style name="PopupMenu.Copalive" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_copalive</item>
    </style>

    <style name="DropDownListView.Copalive" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_copalive</item>
    </style>

    <style name="DropDownNav.Copalive" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_copalive</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_copalive</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_copalive</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Copalive.Widget" parent="@style/Theme.AppCompat">
        <item name="android:popupMenuStyle">@style/PopupMenu.Copalive</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Copalive</item>
    </style>

</resources>